# <%= @name %>
ike <%= @mode if @mode %> esp \
    from { <%= @local_network %> } \
    to { <%= @remote_network %> } \
    local <%= @local_router %> peer <%= @remote_router %> \
    main <%= "lifetime " + @p1_lifetime if @p1_lifetime %> \
    quick <%= "lifetime " + @p2_lifetime if @p2_lifetime %> \
    srcid <%= @local_router %> dstid <%= @remote_router %> \
    psk "<%= @key %>"

